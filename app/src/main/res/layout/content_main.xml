<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alp.yalantisfirsttask.MainActivity"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:onClick="onClickToast"
                android:text="@string/utilities"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/font_size"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="@drawable/rounded_orange"
                android:onClick="onClickToast"
                android:text="@string/inwork"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/side_padding"
                android:paddingRight="@dimen/side_padding"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                style="@style/Left"
                android:onClick="onClickToast"
                android:text="@string/creation_date"/>

            <TextView
                android:id="@+id/textView4"
                style="@style/Right"
                android:onClick="onClickToast"
                android:text="@string/date_1"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                style="@style/Left"
                android:onClick="onClickToast"
                android:text="@string/registration_date"/>

            <TextView
                android:id="@+id/textView6"
                style="@style/Right"
                android:onClick="onClickToast"
                android:text="@string/date2"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                style="@style/Left"
                android:onClick="onClickToast"
                android:text="@string/solution_date"/>

            <TextView
                android:id="@+id/textView8"
                style="@style/Right"
                android:onClick="onClickToast"
                android:text="@string/date3"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                style="@style/Left"
                android:onClick="onClickToast"
                android:text="@string/responsible"/>

            <TextView
                android:id="@+id/textView10"
                style="@style/Right"
                android:onClick="onClickToast"
                android:text="@string/dp_mvk"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:onClick="onClickToast"
            android:text="@string/description"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/font_size"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClickToast"
            />

    </LinearLayout>

</ScrollView>
